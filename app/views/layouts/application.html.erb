<!DOCTYPE html>
<html>
<head>
  <title>RGallery</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">RailsGallery</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li> <%=link_to "Home", root_path %> </li>
            <% @CategoryNav.each do |category| %>
              <li><%= link_to category.name, category_path(category.id) %></li>
            <% end %>	
            
          </ul>
          <ul class="nav navbar-nav pull-right">
             <li><%=link_to "Upload", upload_path %> </li>
              <li><%=link_to "Add Category", new_category_path %> </li>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <section>
        <div class="container">
           <% if flash[:success] %>
             <div class="alert alert-success"><%= flash[:notice] %></div>
            <% end %>
            
           <% if flash[:alert] %>
             <div class="alert alert-danger"><%= flash[:alert] %></div>
           <% end %>
               
           <%= yield %>
        </div>            
    </section>

</html>
